{
  "name": "vite-plugin-vanjs-svg",
  "version": "0.0.2",
  "description": "Vite plugin to transform SVGs into VanJS components",
  "author": "thednp",
  "license": "MIT",
  "homepage": "https://github.com/thednp/vite-plugin-vanjs-svg#readme",
  "keywords": [
    "vite",
    "plugin",
    "svg",
    "vanjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thednp/vite-plugin-vanjs-svg"
  },
  "bugs": {
    "url": "https://github.com/thednp/vite-plugin-vanjs-svg/issues"
  },
  "main": "src/index.mjs",
  "module": "src/index.mjs",
  "types": "src/types.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.mjs",
      "types": "./src/types.d.ts"
    }
  },
  "files": [
    "src/index.mjs",
    "src/htmlToVanCode.mjs",
    "src/index.test.ts",
    "src/types.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest --config vitest.config.mts",
    "test-ui": "vitest --config vitest.config.mts --ui=true",
    "prepublishOnly": "pnpm up && pnpm lint && pnpm format && pnpm badges",
    "badges": "npx -p dependency-version-badge update-badge vanjs-core typescript vitest vite",
    "format": "deno fmt src/index.mjs src/index.test.ts src/types.d.ts",
    "lint": "pnpm lint:ts && pnpm check:ts",
    "lint:ts": "deno lint src/index.mjs src/index.test.ts",
    "fix:ts": "deno lint src/index.mjs src/index.test.ts --fix",
    "check:ts": "tsc -noEmit"
  },
  "dependencies": {
    "@thednp/domparser": "^0.0.2",
    "@rollup/pluginutils": "^5.1.4",
    "vanjs-core": "^1.5.3"
  },
  "peerDependencies": {
    "vanjs-core": "^1.2.0",
    "vite": "^5.0.0 || ^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@vitest/browser": "^3.0.6",
    "@vitest/coverage-istanbul": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "typescript": "5.6.2",
    "vite": "^6.1.1",
    "vitest": "^3.0.6"
  },
  "packageManager": "pnpm@8.6.12",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8.6.0"
  }
}